<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="com.naver.maps.map.MapFragment" />

        <!-- 첫 번째 버튼 -->

        <!-- 두 번째 버튼 -->

        <Button
            android:id="@+id/indoor_button"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/rounded_button"
            android:text="실내"
            android:textSize="30sp"
            app:layout_constraintEnd_toStartOf="@id/outdoor_button"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="13dp" />

        <Button
            android:id="@+id/outdoor_button"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/rounded_button"
            android:text="실외"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/indoor_button"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="13dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 슬라이딩 드로어 영역 -->
    <LinearLayout
        android:id="@+id/nav_drawer"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="start"
        android:gravity="center"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 슬라이딩 드로어에 표시될 내용 -->
        <TextView
            android:id="@+id/marker_info_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Marker Information"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </LinearLayout>



</androidx.drawerlayout.widget.DrawerLayout>



